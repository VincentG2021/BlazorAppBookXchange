@page "/membrelist"

<PageTitle>Liste des membres</PageTitle>

<h1>Liste des membres</h1>

@if (membresList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var membre in membresList)
            {
                <tr>
                    <td>@membre.Pseudo</td>
                    <td>@membre.Email</td>
                    <td>@membre.Role</td>
                </tr>
            }
        </tbody>
    </table>
}
