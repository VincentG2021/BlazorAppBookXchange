<h3 style="color: #0505b5; text-align: center">Exemplaires de: "@TitreSelectedBook"</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ref exemplaire</th>
                <th>Ref edition</th>
                <th>Titre</th>
                <th>Ref membre</th>

@*                <th>ISBN</th>
                <th>Date de parution</th>
                <th>Format</th>
                <th>Id Edition</th>
*@                
                @if(_accountManager.IsTokenPresent)
                {
                    <th>Actions</th>   
                }
            </tr>
        </thead>
        <tbody>
            @if (exemplairesByLivre == null)
            {
            <p><em>Loading...</em></p>
            }
            else
            {
                @foreach (var exemplaire in exemplairesByLivre)
                {
                    <tr>
                        <td>@exemplaire.IdExemplaire</td>
                        <td>@exemplaire.IdEdition</td>
                        <td>@exemplaire.Titre</td>
                        <td>@exemplaire.IdMembre</td>


@*                        <td>@exemplaire.Isbn</td>
                        <td>@exemplaire.Parution</td>
                        <td>@exemplaire.Format</td>
                        <td>@exemplaire.IdEdition</td>
*@                        <td>Voir infos membre et status</td>
                    </tr>
                }
            }
        </tbody>
    </table>



