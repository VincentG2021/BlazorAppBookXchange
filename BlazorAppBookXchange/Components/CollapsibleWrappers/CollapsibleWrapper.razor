<h3>Collapsible</h3>


<div class="row">
  <a href="#" @onclick=Toggle class="col-12">@ActionCollapseText</a>

  @if (!Collapsed)
  {
    <div class="col-12 card card-body">
      @ChildContent
    </div>
  }
</div>
@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool Collapsed { get; set; }
    string ActionCollapseText { get => Collapsed ? "Expand" : "Collapse"; }

    
    void Toggle()
    {
        Collapsed = !Collapsed;
    }

}