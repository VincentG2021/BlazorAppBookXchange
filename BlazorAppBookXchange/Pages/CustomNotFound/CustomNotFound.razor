@page "/404"
@using BlazorAppBookXchange.Pages.CustomNotFound

<div class="card customNotFound">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <p class="redy">Vous avez perdu votre page n'est-ce pas ?</p>
                <p><em><small>(Sorry, but we couldn't find the page you are looking for...)</small></em></p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col text-md-center m-5 text-primary">
        <span>
            <img src="images/logo_bookXchange_left.gif" class="img-fluid" style="max-width: 100px; border-radius: 50%;"/>
        </span>
        <span>
            <button type="button" class="btn btn-primary" @onclick="NavigateToHome">Allez à la page d'accueil</button>
        </span>
        <span>
            <img src="images/logo_bookXchange_right.gif" class="img-fluid" style="max-width: 100px; border-radius: 50%;"/>
        </span>
    </div>
</div>

@code {
    [Inject]
    public NavigationManager NavigationManager { get; set; }
    public void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}