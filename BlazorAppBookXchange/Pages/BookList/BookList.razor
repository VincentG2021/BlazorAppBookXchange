@page "/booklist"
@using BlazorAppBookXchange.Models
@using BlazorAppBookXchange.Pages.EditionList

<PageTitle>Liste de livres</PageTitle>

<h1>Liste de livres</h1>

@if (bookList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Synopsis</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in bookList)
            {
                <tr>
                    <td>@book.Titre</td>
                    <td>@book.Auteur</td>
                    <td>@book.Synopsis</td>
                    <td @onclick='() => SetSelected(book)' style="cursor:pointer;">@book.IdLivre</td>
                </tr>
            }
        </tbody>
    </table>
}


<EditionList Selected="@Selected"></EditionList>
