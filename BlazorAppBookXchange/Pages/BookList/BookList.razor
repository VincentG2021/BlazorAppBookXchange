@page "/booklist"
@using BlazorAppBookXchange.Models
@using BlazorAppBookXchange.Pages.EditionList


<PageTitle>Liste de livres</PageTitle>

<h1>Liste de livres</h1>


@if (bookList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Synopsis</th>
                <th>REF</th>
                <th>Details</th>
                @if(accountManager.IsTokenPresent)
                {
                    <th>Actions</th>
                    
                }
            </tr>
        </thead>
        <tbody>

            @foreach (var book in bookList)
            {
                <tr>
                    <td>@book.Titre</td>
                    <td>@book.Auteur</td>
                    <td>@book.Synopsis</td>
                    
                    <td @onclick='() => SetSelected(book)' style="cursor:pointer;">@book.IdLivre</td>
                    

                    <td @onclick='() => GetSelectedBookEditions(book)' style="cursor:pointer;">@book.IdLivre</td>
                    
<td>
                        <div class="dropdown">
                            <select class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                                <option value="Select" selected disabled="disabled">Actions</option>
                                <option value="try" @onclick='() => GoToBookDetails(book.IdLivre)'>Détails</option>
                                <option value="Two" @onclick='() => GoToBookEdit()'>Editer</option>
                            </select>
                        </div>

